{
	"name": "my-app-backend",
	"version": "0.0.1",
	"description": "This is the backend of my-app",
	"main": "build/index.js",
	"module": "src/index.ts",
	"requiredVariables": [
		"SAMPLE"
	],
	"scripts": {
		"build": "tsc",
		"debug": "nodemon --inspect src/index.ts",
		"dev": "nodemon src/index.ts",
		"start": "node build/index.js",
		"format": "prettier --write \"**/*.{ts,js,cjs}\"",
		"format:check": "prettier -c \"**/*.{ts,js,cjs}\"",
		"lint": "eslint \"src/**/*.{ts,js,cjs}\"",
		"lint:fix": "npm run lint -- --fix",
		"prepare": "husky install",
		"test": "jest"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"chalk": "^4.1.1",
		"config": "^3.3.6",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"express-async-errors": "^3.1.1",
		"express-rate-limit": "^5.2.6",
		"helmet": "^4.6.0",
		"http-status-codes": "^2.1.4",
		"module-alias": "^2.2.2",
		"morgan": "^1.10.0",
		"swagger-ui-express": "^4.1.6",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.1.0",
		"@commitlint/config-conventional": "^13.1.0",
		"@trivago/prettier-plugin-sort-imports": "^2.0.2",
		"@types/config": "^0.0.39",
		"@types/jest": "^26.0.23",
		"@types/node": "^16.7.13",
		"eslint": "^7.28.0",
		"eslint-plugin-jest": "^24.3.6",
		"husky": "^7.0.1",
		"jest": "^27.0.4",
		"nodemon": "^2.0.7",
		"prettier": "^2.3.1",
		"pretty-quick": "^3.1.1",
		"supertest": "^6.1.4",
		"typescript": "^4.4.2"
	},
	"_moduleAliases": {
		"@root": ".",
		"@": "src",
		"@/*": "src/",
		"@controllers": "src/controllers",
		"@helpers": "src/helpers",
		"@middlewares": "src/middlewares",
		"@models": "src/models",
		"@routers": "src/routers",
		"@tools": "src/tools",
		"@controllers/*": "src/controllers/",
		"@helpers/*": "src/helpers/",
		"@middlewares/*": "src/middlewares/",
		"@models/*": "src/models/",
		"@routers/*": "src/routers/",
		"@tools/*": "src/tools/"
	}
}
